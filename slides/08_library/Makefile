# GNU Make solution makefile autogenerated by Premake

ifndef config
  config=normal
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),normal)
  static_config = normal
  library_config = normal
  global_config = normal
endif
ifeq ($(config),symbolic)
  static_config = symbolic
  library_config = symbolic
  global_config = symbolic
endif

PROJECTS := static library global

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

static:
ifneq (,$(static_config))
	@echo "==== Building static ($(static_config)) ===="
	@${MAKE} --no-print-directory -C . -f static.make config=$(static_config)
endif

library: static
ifneq (,$(library_config))
	@echo "==== Building library ($(library_config)) ===="
	@${MAKE} --no-print-directory -C . -f library.make config=$(library_config)
endif

global: library
ifneq (,$(global_config))
	@echo "==== Building global ($(global_config)) ===="
	@${MAKE} --no-print-directory -C . -f global.make config=$(global_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f static.make clean
	@${MAKE} --no-print-directory -C . -f library.make clean
	@${MAKE} --no-print-directory -C . -f global.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  normal"
	@echo "  symbolic"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   static"
	@echo "   library"
	@echo "   global"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"
